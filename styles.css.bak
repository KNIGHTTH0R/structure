nav {
	background: #607D8B;
	border-bottom: 8px solid #37474F;
	box-shadow: 0px 4px 10px #999;
	height: 70px;
}

.nav-logo {
	float: left;
	padding-left: 125px;
	width: 30%;	
}

.nav-logo img {
	height: 62px;
}

.nav-menu {
	float: left;
	list-style: none;
	margin: 0px;
}

.nav-menu li {
	float: left;
}

.nav-menu li a {
	color: #fff;
	display: block;
	height: 70px;
	letter-spacing: 1px;
	padding: 20px 0px 20px 0px;
	text-align: center;
	text-decoration: none;
	width: 100px;
}

.nav-menu li a:hover {
	background-color: #78909C;
	border-bottom: 8px solid #fff;
}