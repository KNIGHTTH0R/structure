html, body {
	font-family: "Open Sans", sans-serif;
}

nav {
	background: #3B3F51;
	border-bottom: 5px solid #eee;
	box-shadow: 0px 4px 10px #999;
	height: 70px;
	position: fixed;
	top: 0px;
	width: 100%;
	z-index: 9999;
}

.nav-logo {
	float: left;
	padding-left: 10px;
	width: 300px;	
}

.nav-logo img {
	height: 65px;
}

.nav-logo span {
	color: #fff;
	font-size: 22px;
	vertical-align: middle;
}

.nav-menu {
	float: left;
	list-style: none;
	margin: 0px;
}

.nav-menu li {
	float: left;
}

.nav-menu li a {
	color: #fff;
	display: block;
	height: 70px;
	font-size: 12px;
	letter-spacing: 1px;
	line-height: 1;
	padding-top: 10px;
	text-align: center;
	text-decoration: none;
	width: 100px;
}

.nav-menu li a i {
	font-size: 18px;
}

.nav-menu .nav-item {
	padding-top: 5px;
}

.nav-menu > li > a:hover {
	background-color: #78909C;
	border-bottom: 5px solid #fff;
}

.nav-menu > li.active a {
	background-color: #78909C;
	border-bottom: 5px solid #fff;
}

.page-content {
	margin-top: 95px;
}

.panel {
	border-radius: 0px;
	box-shadow: 0px 2px 12px rgba( 0, 0, 0, .2 ) !important;
}

footer {
	color: #fff;
	background-color: #3B3F51;
	box-shadow: 0px -2px 10px #999;
	font-size: 12px;
	font-weight: 600;
	height: 50px;
	line-height: 50px;
	width: 100%;
}

footer span {
	padding-left: 25px;
}

.front-login {
	position: absolute;
	right: 0;
}

.front-login a {
	background-color: #3F51B5;
	border-bottom: 5px solid #eee;
}